<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="customer" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
			<label>customer</label>
			<tab>customer</tab>
			<resource>GetJohn_PasswordCheck::config_getjohn_passwordcheck</resource>
			<group id="password" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
				<label>password</label>
				<field id="prevent_reusing_password" showInDefault="1" showInStore="0" showInWebsite="1" sortOrder="90" translate="label" type="select">
					<label>Prevent Re-using Last X Passwords</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="enforce_password_reset" showInDefault="1" showInStore="0" showInWebsite="1" sortOrder="100" translate="label" type="select">
					<label>Enforce Password Reset Every X Days</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
                <field id="x_days" showInDefault="1" showInStore="0" showInWebsite="1" sortOrder="110" translate="label" type="text">
                    <label>X Days</label>
                    <comment/>
                </field>
			</group>
		</section>
	</system>
</config>
